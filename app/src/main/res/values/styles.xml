<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="MenuButton">
        <item name="android:background">@color/sapphire</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="ContinueButton">
        <item name="android:background">@color/gold</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="PokemonLabel">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="DataLabel">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="Overlay">
        <item name="android:background">@color/clear_black</item>
    </style>

    <style name="DefaultText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DefaultText.Gold">
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="DefaultText.Small">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="StatHeaderLabel">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/platinum</item>
    </style>

    <style name="StatDataLabel">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="ListItem">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/platinum</item>
    </style>

    <style name="Container">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>